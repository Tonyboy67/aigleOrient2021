{% extends 'base.html.twig' %}

{% block title %}请登录 - Veuillez vous connecter
{% endblock %}

{% block body %}

	<div class="container pt-5" style="margin-top: 30px;">
		<div class="row">
			<div class="col-12">
				<div class="card" style="width: 50%">
					<div class="card-header">
						<h3>请登录 - Veuillez vous connecter
						</h3>
					</div>
					<div class="card-body">
						<form method="post">
							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}

							<label for="inputEmail" style="font-weight: bold; margin-bottom: 5px">您的电子邮箱 - Votre email</label>
							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" style="font-weight: bold; margin-bottom: 10px" required autofocus>
							<label for="inputPassword" style="font-weight: bold; margin-bottom: 5px">您的密码 - Mot de passe</label>
							<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" style="font-weight: bold; margin-bottom: 10px" required>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<button class="btn btn-lg btn-primary" type="submit">
								登录 - Connexion
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
