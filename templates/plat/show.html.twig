{% extends 'base.html.twig' %}

{% block title %}Plat
{% endblock %}

{% block body %}
	<h1>Plat</h1>

	<table class="table">
		<tbody>
			{% if app.user %}
				{% if app.user.roles[0] is same as "ROLE_ADMIN" %}
					<tr>
						<th>Id</th>
						<td>{{ plat.id }}</td>
					</tr>
				{% endif %}
			{% endif %}
			<tr>
				<th>Nom</th>
				<td>{{ plat.nom }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ plat.description }}</td>
			</tr>
			<tr>
				<th></th>
				<td>
					<img
					src="{{ asset( plat.image ) }}" alt="{{ plat.nom }}" style="width: 35% ">
				{# {{ plat.image }} #}
				</td>
			</tr>
			<tr>
				<th>Prix</th>
				<td>{{ plat.prix | amount }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('plat_index') }}">back to list</a>

	{# <a href="{{ path('plat_edit', {'id': plat.id}) }}">edit</a>
																
																	{{ include('plat/_delete_form.html.twig') }} #}
{% endblock %}
