{% extends 'base.html.twig' %}

{% block title %}CategoriePlat index
{% endblock %}

{% block body %}
	<h1>CategoriePlat index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for categorie_plat in categorie_plats %}
				<tr>
					{# <td>{{ categorie_plat.id }}</td> #}
					<td>{{ categorie_plat.nom }}</td>
					<td>
						<textarea>{{ categorie_plat.description }}</textarea>
					</td>
					<td>
						<a href="{{ path('categorie_plat_show', {'id': categorie_plat.id}) }}">show</a>
						|
						<a href="{{ path('categorie_plat_edit', {'id': categorie_plat.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">Aucun type de plat trouvé. Veuillez en insérer</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('categorie_plat_new') }}">新的菜式 - Nouvelle catégorie de plat</a>
{% endblock %}
